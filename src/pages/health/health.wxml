<view style="width:80%; margin : 0 auto">
	<van-grid column-num="2"  border="{{false}}">
	<van-grid-item use-slot="true">
		<van-button
		custom-style="height:240rpx;width:240rpx;border-radius:20rpx;"
		square
		type="info"
		>
			<text style="font-size: 40rpx;">预约挂号</text>
		</van-button>
	</van-grid-item>
	
	<van-grid-item use-slot="true">
		<van-button
		custom-style="height:240rpx;width:240rpx;border-radius:20rpx;"
		square
		type="primary"
		>
			在线问诊
		</van-button>
	</van-grid-item>
	
	<van-grid-item use-slot="true">
		<van-button
		custom-style="height:250rpx;width:250rpx;border-radius:20rpx;"
		square
		color="#5BC1EC"
		>
			健康资讯
		</van-button>
	</van-grid-item>
	
	<van-grid-item use-slot="true">
		<van-button
		custom-style="height:250rpx;width:250rpx;border-radius:20rpx;"
		square
		type="warning"
		bindtap="navToPE"
		color="#"
		>
			体检检查
		</van-button>
	</van-grid-item>
	
</van-grid>

</view>
