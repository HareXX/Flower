<van-grid column-num="3"  border="{{false}}" >
	<van-grid-item use-slot="true">
		<van-button
		custom-style="height:200rpx;width:200rpx;border-radius:20rpx;"
		square
		type="info"
		bindtap="updTo1"
		>
			服务存入
		</van-button>
	</van-grid-item>
	
	<van-grid-item use-slot="true">
		<van-button
		custom-style="height:200rpx;width:200rpx;border-radius:20rpx;"
		square
		type="primary"
		bindtap="updTo2"
		>
			护理寻找
		</van-button>
	</van-grid-item>
	
	<van-grid-item use-slot="true">
		<van-button
		custom-style="height:200rpx;width:200rpx;border-radius:20rpx;"
		square
		type="warning"
		bindtap="updTo3"
		>
			储蓄余额
		</van-button>
	</van-grid-item>
	
</van-grid>

<view wx:if="{{active == 1}}">
	<view style="height : 250rpx;">
		<van-cell title="服务存入"/>
	</view>

</view>

<view wx:elif="{{active == 2}}">

	<view style="height : 250rpx;">
		<van-cell title="护理寻找"/>
	</view>
</view>

<view wx:elif="{{active == 3}}">
	<view style="height : 250rpx;">
		<van-cell title="储蓄余额"/>
	</view>


</view>


